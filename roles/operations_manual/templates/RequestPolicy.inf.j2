[Version]
Signature="$Windows NT$"

[NewRequest]
; Remove this line to use an empty subject DN. TLS does not require a subject DN when a critical SAN extension is included.
Subject = "CN=example.com"

; Set to TRUE to make it possible to export a copy of the private key.
Exportable = FALSE
; Change to ECDH_P256 and remove KeyLength if you want to use ECC instead of RSA.
KeyAlgorithm = RSA
KeyLength = 2048
KeySpec = 1      ; AT_KEYEXCHANGE
KeyUsage = 0xA0  ; digitalSignature, keyEncipherment
; Set to False to assign the keypair to the user instead of the machine.
MachineKeySet = True
ProviderName = "Microsoft RSA SChannel Cryptographic Provider"
RequestType = PKCS10

[EnhancedKeyUsageExtension]
OID=1.3.6.1.5.5.7.3.1 ; Server Authentication
OID=1.3.6.1.5.5.7.3.2 ; Client Authentication

[Extensions]
; Include the SAN extension.
2.5.29.17 = "{text}"
_continue_ = "dns=example.com&"
_continue_ = "ipaddress=1.2.3.4&"
_continue_ = "email=foo@example.com&"
_continue_ = "upn=foo@example.com&"

[RequestAttributes]
; Change to the template you want to use
CertificateTemplate = WebServer